      </div>

    <!-- </div> -->  <!-- ROW -->
    </div> <!-- CAROUSEL ITEM -->

    <div class="carousel-item #0d47a1 blue darken-4 white-text" href="#two!">

      <div class="input-field col s4">
      <p>Job Title <%= f.text_field :job_title%> </p>
      </div>

      <div class="input-field col s4">
      <p>Company <%= f.text_field :company%> </p>
      </div>

      <div class="input-field col s4">
      <p>Date <%= f.text_field :date%> </p>
      </div>

      <div class="input-field col s6">
      <p>Description <%= f.text_area :description%> </p>
      </div>

    </div>  <!-- CAROUSEL ITEM -->

    <div class="carousel-item #0d47a1 blue darken-4 white-text" href="#three!">
      <div class="input-field col s6">
      <p>Skills <%= f.text_field :skills%> </p>
      </div>
    </div> <!-- CAROUSEL ITEM -->

    <div class="carousel-item #0d47a1 blue darken-4 white-text" href="#four!">
      <div class="input-field col s8">

      <p>Education <%= f.text_field :education%> </p>
      </div>

      <div class="input-field col s8">
      <p>Description <%= f.text_area :edu_description%> </p>
      <button type="submit" name="action" class="waves-effect #42a5f5 blue lighten-1"><%= f.submit "Submit" %></button>
      </div>

    </div> <!-- CAROUSEL ITEM -->

  </div> <!-- CAROUSEL -->
</div> <!-- ROW -->
<% end %>


