
<%= form_for :resume, method: 'post', class: "col s12", url: {action: 'create'} do |f| %>
<div class="row">
  <div class="carousel carousel-slider center" data-indicators="true">
    <div class="carousel-fixed-item center">

    </div>
    <div class="carousel-item #0d47a1 blue darken-4 white-text" href="#one!">
      <h2>Fill in your information</h2>
      <!-- <div class="row"> -->

      <div class="input-field col s3">
      <p>Full Name <%= f.text_field :fullname%> </p>
      </div>

      <div class="input-field col s3">
      <p>Title <%= f.text_field :current_title%> </p>
      </div>

      <div class="input-field col s3">
      <p>Email <%= f.text_field :email%> </p>
      </div>

      <div class="input-field col s3">
      <p>Phone <%= f.text_field :phone%> </p>
      </div>

      <div class="input-field col s3">
      <p>Website <%= f.text_field :site%> </p>
      </div>

      <div class="input-field col s9">
